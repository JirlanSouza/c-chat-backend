generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @map("_id") @db.ObjectId
  name      String
  email     String @unique
  password  String
  avatarurl String
}

model Room {
  id        String @id @map("_id") @db.ObjectId
  name      String @unique
  avatarUrl String
}

model RoomUser {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  roomId String
  userId String
}

model RoomMessage {
  id      String   @id @map("_id") @db.ObjectId
  roomId  String
  userId  String
  text    String
  created DateTime
}
